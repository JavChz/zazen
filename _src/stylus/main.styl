html
  font-size 14px
body
  font-family "Source Sans Pro", Sans-serif
// Tools
.wrap
  max-width 1200px
  margin 0 auto
// Layout
#articleList
  margin-top 1rem
.postThumb
  width 95%
  margin 1rem auto
// Desktop
@media screen and (min-width: 1200px)
  font-size 20px
// Tablet
@media screen and (min-width: 720px)
  font-size 18px
// Phone
@media screen and (min-width: 320px)
  font-size 16px
